@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row login-row">
    <div class="col-sm-5">
        <div class="card">
            <form id="account" method="post">
                <p class="login-header">Welcome Back!</p>
                <div style="display: flex; justify-content: center; align-items: center;">
                    <hr style="width: 88%;" />
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="background-color: #EEEFF5; border-color: #EEEFF5; height: 60px; border-radius: 7px;" />
                    <label asp-for="Input.Email" class="form-label" style="padding-left: 60px; color: #2F2E41;">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" style="background-color: #EEEFF5; border-color: #EEEFF5; height: 60px; border-radius: 7px;" />
                    <label asp-for="Input.Password" class="form-label" style="padding-left: 60px; color: #2F2E41;">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label" style="padding-left: 40px; color: #2F2E41;">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="submit-btn" style="padding-left: 40px; padding-right: 40px; padding-top: 20px; padding-bottom: 20px;">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="border-radius: 7px; background-color: #3FA7D6; color: #FFFFFF; border-color: #3FA7D6">Log in</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-sm-6" style="display: flex; justify-content: end; align-items: center; margin-right: 50px; margin-top: 50px; margin-bottom: 50px;">
        <img src="~/img/login.webp" style="width: 350px; height: 220px;" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
